<%= render 'header' %>

<div class="row">

  <div class="span8">

    <div class="bordered">

      <h2><%= @team.name %></h2>
      <% if @team.info.empty? %>
      <p>You have not provided any information about this team yet.</p>
      <% else %>
      <p><%= @team.info %></p>
      <% end %>

      <table class="table table-striped table-bordered">

        <thead>
          <tr>
            <th>Firstname</th>
            <th>Surname</th>
            <th>Position</th>
            <th>Actions</th>
          </tr>
        </thead>

        <h3>Players</h3>

        <tbody>

          <% @players.each do |player| %>
          <tr>
            <td><%= player.firstname %></td>
            <td><%= player.surname %></td>
            <td><%= player.position %></td>
            <td>
              <%= link_to 'Edit Player', edit_admin_team_player_path(player.team_id, player), :class => 'btn' %>
              <%= 
                link_to 'Delete Player', '#deleteItem', 
                'data-url' => admin_team_player_path(player.team_id, player),
                'data-name' => "#{player.firstname} #{player.surname}", 
                :class => 'btn btn-danger delete' 
              %>
            </td>
          </tr>
          <% end %>

        </tbody>

      </table>

      <%= link_to 'New Player', new_admin_team_player_path, :class => 'btn btn-primary' %>
      <%= link_to 'Edit Team', edit_admin_team_path(@team), :class => 'btn' %>
      <%= link_to 'Back', admin_teams_path, :class => 'btn' %>

    </div>
    
  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>