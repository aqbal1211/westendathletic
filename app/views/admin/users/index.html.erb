<%= render 'header' %>

<div class="row">

  <div class="span8">

    <table class="table table-striped table-bordered">

      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>

        <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Edit User', edit_admin_user_path(user), :class => 'btn' %>
            <%= 
              link_to 'Delete User', '#deleteItem', 
              'data-url' => admin_user_path(user),
              'data-name' => user.username, 
              :class => 'btn btn-danger delete' unless user == @current_user 
            %>
          </td>
        </tr>
        <% end %>

      </tbody>

    </table>

    <%= link_to 'New User', new_admin_user_path, :class => 'btn btn-primary' %>
    
  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>