<%= render 'header' %>

<div class="row">

  <div class="span8">

    <div class="bordered">

      <div class="pull-right">
        <%= link_to 'Back', admin_teams_path, :class => 'btn' %>
        <%= link_to 'New Player', new_admin_team_player_path(@team), :class => 'btn btn-primary' %>
      </div>

      <h2><%= @team.name %></h2>
      <% if @team.info.empty? %>
      <p>There is no information about this team yet.</p>
      <% else %>
      <p><%= @team.info %></p>
      <% end %>

      <h3>Players</h3>

      <table class="table table-striped table-bordered">

        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>

          <% @team.players.all.each do |player| %>
          <tr>
            <td><%= link_to "#{player.firstname} #{player.surname}", admin_team_player_path(player.team_id, player) %></td>
            <td><%= player.position %></td>
            <td>
              <%= link_to 'Edit Player', edit_admin_team_player_path(player.team_id, player), :class => 'btn' %>
              <%= 
                link_to 'Delete Player', '#deleteItem', 
                'data-url' => admin_team_player_path(player.team_id, player),
                'data-name' => "#{player.firstname} #{player.surname}", 
                :class => 'btn btn-danger delete' 
              %>
            </td>
          </tr>
          <% end %>

          <% if @team.players.all.empty? %>
          <tr>
            <td colspan="3">There are no players.</td>
          </tr>
          <% end %>

        </tbody>

      </table>

    </div>
    
  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>