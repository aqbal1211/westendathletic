<%= render 'header' %>

<div class="row">

  <div class="span8">

    <div class="bordered">

      <h2>Teams</h2>

      <table class="table table-striped table-bordered">

        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>

          <% @teams.each do |team| %>
          <tr>
            <td><%= link_to team.name, admin_team_players_path(team) %></td>
            <td>
              <%= link_to 'Edit Team', edit_admin_team_path(team), :class => 'btn' %>
              <%= 
                link_to 'Delete Team', '#deleteItem', 
                'data-url' => admin_team_path(team),
                'data-name' => team.name, 
                :class => 'btn btn-danger delete' 
              %>
            </td>
          </tr>
          <% end %>

        </tbody>

      </table>

      <%= link_to 'New Team', new_admin_team_path, :class => 'btn btn-primary' %>

    </div>
    
  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>