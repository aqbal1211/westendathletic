<%= render 'header' %>

<div class="row">

  <div class="span8">

  	<div class="bordered">

  		<div class="pull-right">
        <%= link_to 'Back', admin_competition_path(@season.competition), :class => 'btn' %>
        <%= link_to 'Edit Teams', admin_season_teams_path(@season), :class => 'btn btn-primary' %>
      </div>

  		<h2><%= @season.name %></h2>
      <p><strong>Start Date: </strong> <%= @season.start_date %></p>
      <p><strong>End Date: </strong> <%= @season.end_date %></p>

      <table class="table table-striped table-bordered">

        <thead>
          <tr>
            <th>Pos</th>
            <th>Name</th>
            <th>P</th>
            <th>W</th>
            <th>D</th>
            <th>L</th>
            <th>F</th>
            <th>A</th>
            <th>GD</th>
            <th>R</th>
            <th>Y</th>
            <th>Pts</th>
          </tr>
        </thead>

        <tbody>

          <% @season.teams.each do |team| %>
          <tr>
            <td>0</td>
            <td><%= link_to team.name, admin_team_path(team) %></td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
            <td>0</td>
          </tr>
          <% end %>

          <% if @season.teams.empty? %>
          <tr>
            <td colspan="12">There are no teams.</td>
          </tr>
          <% end %>

        </tbody>

      </table>

    </div>

  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>