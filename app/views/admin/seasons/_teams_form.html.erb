<%= form_for([:admin, @season], :url => admin_season_teams_path, :html => {:id => 'js_teams', :class => 'form-horizontal well'}) do |f| %>

  <fieldset>

    <% @season.teams.each_with_index do |team, index| %>
    <div class="control-group">
      <div class="controls">
        <%= select_tag "teams[#{index}]", options_for_select(get_teams_hash, team.id), :prompt => 'Select Team' %>
        <span class="help-inline">
          <%= link_to 'Remove', '#', { :class => 'js_remove_team btn btn-danger btn-mini' } %>
        </span>
      </div>
    </div>
    <% end %>

    <% if @season.teams.empty? %>
    <div class="control-group">
      <div class="controls">
        <%= select_tag "teams[0]", options_for_select(get_teams_hash), :prompt => 'Select Team' %>
        <span class="help-inline">
          <%= link_to 'Remove', '#', { :class => 'js_remove_team btn btn-danger btn-mini' } %>
        </span>
      </div>
    </div>
    <% end%>

    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_season_path(@season), :class => 'btn' %>
    </div>

  </fieldset>

<% end %>