<%= render 'header' %>

<div class="row">

  <div class="span8">

    <div class="bordered">

      <div class="pull-right">
        <%= link_to 'New Competition', new_admin_competition_path, :class => 'btn btn-primary' %>
      </div>

      <h2>Competitions</h2>     

      <table class="table table-striped table-bordered">

        <thead>
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>

          <% @competitions.each do |competition| %>
          <tr>
            <td><%= link_to competition.name, admin_competition_path(competition) %></td>
            <td>
              <%= link_to 'Edit Competition', edit_admin_competition_path(competition), :class => 'btn' %>
              <%= 
                link_to 'Delete Competition', '#deleteItem', 
                'data-url' => admin_competition_path(competition),
                'data-name' => competition.name, 
                :class => 'btn btn-danger delete' 
              %>
            </td>
          </tr>
          <% end %>

          <% if @competitions.empty? %>
          <tr>
            <td colspan="2">There are no competitions.</td>
          </tr>
          <% end %>

        </tbody>

      </table>

    </div>
    
  </div>

  <div class="span4">
    <h2>Sidebar</h2>
  </div>

</div>