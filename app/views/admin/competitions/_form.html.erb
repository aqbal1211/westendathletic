<%= form_for([:admin, @competition], :html => {:class => 'form-horizontal well'}) do |f| %>

  <fieldset>

    <div class="control-group <%= 'error' if @competition.errors[:name].any? %>">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
        <span class="help-inline"><%= @competition.errors[:name].join(", ") %></span>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_competitions_path, :class => 'btn' %>
    </div>

</fieldset>

<% end %>